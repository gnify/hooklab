{
  "name": "@hooklab/root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "license": "./LICENSE",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=@hooklab/docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "inspect": "npx @eslint/config-inspector",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "release": "turbo run build --filter=!@hooklab/docs && changeset publish",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@hooklab/commitlint": "workspace:*",
    "@hooklab/eslint": "workspace:*",
    "@hooklab/lintstaged": "workspace:*",
    "@hooklab/prettier": "workspace:*",
    "@turbo/gen": "^2.3.3",
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@types/node": "^22.10.5",
    "cspell": "^8.17.1",
    "simple-git-hooks": "^2.11.1",
    "syncpack": "^13.0.0",
    "turbo": "^2.3.3",
    "vitest": "^2.1.8"
  }
}
