{
  "name": "@hooklab/root",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "inspect": "npx @eslint/config-inspector",
    "dev:docs": "turbo run dev --filter=@hooklab/docs",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@hooklab/docs && changeset publish"
  },
  "prettier": "@hooklab/prettier",
  "dependencies": {
    "@hooklab/commitlint": "workspace:*",
    "@hooklab/lintstaged": "workspace:*",
    "@hooklab/prettier": "workspace:*",
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@babel/eslint-parser": "^7.25.9",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/node": "22.7.8",
    "cspell": "^8.17.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.11.1",
    "syncpack": "^13.0.0",
    "tsup": "^8.3.5",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8"
  }
}
