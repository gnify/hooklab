{
  "name": "@hooklab/root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "license": "./LICENSE",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=@hooklab/docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "inspect": "npx @eslint/config-inspector",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "release": "turbo run build --filter=!@hooklab/docs && changeset publish",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@hooklab/commitlint": "workspace:*",
    "@hooklab/eslint": "workspace:*",
    "@hooklab/lintstaged": "workspace:*",
    "@hooklab/prettier": "workspace:*",
    "@turbo/gen": "^2.3.3",
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.26.5",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint-react/eslint-plugin": "^1.23.2",
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/eslint-plugin": "^1.1.25",
    "cspell": "^8.17.1",
    "eslint": "^9.18.0",
    "eslint-plugin-antfu": "^2.7.0",
    "eslint-plugin-command": "^2.1.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "simple-git-hooks": "^2.11.1",
    "syncpack": "^13.0.0",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  }
}
